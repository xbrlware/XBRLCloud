<!--- The default skin class for a Spark ToggleButton component.  

     @see spark.components.ToggleButton
        
      @langversion 3.0
      @playerversion Flash 10
      @playerversion AIR 1.5
      @productversion Flex 4
-->
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" 
    xmlns:fb="http://ns.adobe.com/flashbuilder/2009" minWidth="21" minHeight="21" alpha.disabledStates="0.8">
    <fx:Metadata>[HostComponent("spark.components.ButtonBarButton")]</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import com.xbrlcloud.assurance.shared.ResourceFinder;
		]]>
	</fx:Script>

    <!-- host component -->
    <!-- states -->
    <s:states>
        <s:State name="up" />
        <s:State name="over" stateGroups="overStates" />
        <s:State name="down" stateGroups="downStates" />
        <s:State name="disabled" stateGroups="disabledStates" />
        <s:State name="upAndSelected" stateGroups="selectedStates, selectedUpStates" />
        <s:State name="overAndSelected" stateGroups="overStates, selectedStates" />
        <s:State name="downAndSelected" stateGroups="downStates, selectedStates" />
        <s:State name="disabledAndSelected" stateGroups="selectedUpStates, disabledStates, selectedStates" />
    </s:states>
    
	<s:BitmapImage width="100%" height="100%" 
				   source.up                  = "{ResourceFinder.button_bar_nav_first_up}"
				   source.over                = "{ResourceFinder.button_bar_nav_first_over}"
				   source.down                = "{ResourceFinder.button_bar_nav_first_down}"
				   source.downAndSelected     = "{ResourceFinder.button_bar_nav_first_down}"
				   source.upAndSelected       = "{ResourceFinder.button_bar_nav_first_down}"
				   source.overAndSelected     = "{ResourceFinder.button_bar_nav_first_down}"
				   source.disabled            = "{ResourceFinder.button_bar_nav_first_up}"
				   source.disabledAndSelected = "{ResourceFinder.button_bar_nav_first_up}"/>

    <!-- layer 8: text -->
    <!--- @copy spark.components.supportClasses.ButtonBase#labelDisplay -->
    <s:Label id="labelDisplay"
             textAlign="center"
             verticalAlign="middle"
             maxDisplayedLines="1"
			 color.over="#0F6CB6" 
			 color.down="#FFFFFF" 
			 color.downAndSelected="#FFFFFF" 
			 color.upAndSelected="#FFFFFF" 
			 color.overAndSelected="#FFFFFF" 
			 color.disabled="#999999"
			 color.disabledAndSelected="#999999"
             horizontalCenter="0" verticalCenter="1"
             left="10" right="10" top="2" bottom="2">
    </s:Label>
    
</s:SparkSkin>
