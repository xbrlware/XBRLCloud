<!--- The default skin class for a Spark ToggleButton component.  

     @see spark.components.ToggleButton
        
      @langversion 3.0
      @playerversion Flash 10
      @playerversion AIR 1.5
      @productversion Flex 4
-->
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" 
			 xmlns:fb="http://ns.adobe.com/flashbuilder/2009" minWidth="21" minHeight="21" alpha.disabledStates="0.5">
	
	<fx:Metadata>[HostComponent("spark.components.ButtonBarButton")]</fx:Metadata>

	<fx:Script>
		<![CDATA[
			import com.xbrlcloud.assurance.shared.ResourceFinder;
		]]>
	</fx:Script>
	
    <!-- host component -->
    <!-- states -->
    <s:states>
        <s:State name="up" />
        <s:State name="over" stateGroups="overStates" />
        <s:State name="down" stateGroups="downStates" />
        <s:State name="disabled" stateGroups="disabledStates" />
        <s:State name="upAndSelected" stateGroups="selectedStates, selectedUpStates" />
        <s:State name="overAndSelected" stateGroups="overStates, selectedStates" />
        <s:State name="downAndSelected" stateGroups="downStates, selectedStates" />
        <s:State name="disabledAndSelected" stateGroups="selectedUpStates, disabledStates, selectedStates" />
    </s:states>
    
	
	<s:BitmapImage width="100%" height="100%" 
				   source.up              = "{ResourceFinder.validation_filter_button_right_up}"
				   source.down            = "{ResourceFinder.validation_filter_button_right_down}"
				   source.downAndSelected = "{ResourceFinder.validation_filter_button_right_down}"
				   source.overAndSelected = "{ResourceFinder.validation_filter_button_right_down}"
				   source.upAndSelected   = "{ResourceFinder.validation_filter_button_right_down}"
				   source.over            = "{ResourceFinder.validation_filter_button_right_over}"/>
	
	
